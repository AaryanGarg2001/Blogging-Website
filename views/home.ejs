<%-include("partials/header");-%>

    <h1>Home</h1> 
    <p><%=content%></p>

    <% for(let i=0;i<posts.length;i++){ %>
        <h1><%= posts[i].title %></h1>
        <% if(posts[i].body.length<=100) { %>
        <p><%= posts[i].body %></p>
        <%} else { %>
            <p><%= posts[i].body.substring(0,101) %>...<a href="/post/<%= posts[i].title %>"> Read More</a></p>
        <%}%>
    <%}%>

<%-include("partials/footer");-%>